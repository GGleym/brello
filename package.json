{
  "name": "brello-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "preinstall": "npx only-allow pnpm",
    "format:check": "prettier --check '.'",
    "check": "pnpm run lint && pnpm run format:check",
    "lint-staged": "lint-staged",
    "prepare": "husky || true",
    "format": "prettier --write '.'",
    "db.init": "supabase init",
    "db.link": "supabase link --project-ref $(project)",
    "db.start": "supabase start",
    "db.stop": "supabase stop",
    "db.status": "supabase status",
    "db.migrations.apply": "supabase migration up --local",
    "db.migrations.pull": "supabase db pull",
    "db.types.generate": "run-s db.types.generate:*",
    "db.types.generate:types": "supabase gen types typescript --local > ./src/shared/api/database.types.ts",
    "db.types.generate:format": "prettier --write ./src/shared/api/database.types.ts"
  },
  "packageManager": "pnpm@9.12.0+sha512.4abf725084d7bcbafbd728bfc7bee61f2f791f977fd87542b3579dcb23504d170d46337945e4c66485cd12d588a0c0e570ed9c477e7ccdd8507cf05f3f92eaca",
  "dependencies": {
    "@hello-pangea/dnd": "^17.0.0",
    "@mantine/core": "^7.13.2",
    "@mantine/dates": "^7.13.2",
    "@mantine/dropzone": "^7.13.2",
    "@mantine/hooks": "^7.13.2",
    "@mantine/modals": "^7.13.2",
    "@mantine/notifications": "^7.13.2",
    "@mantine/spotlight": "^7.13.2",
    "@mantine/tiptap": "^7.13.2",
    "@mantinex/mantine-logo": "^1.0.1",
    "@supabase/supabase-js": "^2.48.1",
    "@tabler/icons-react": "^3.19.0",
    "@tiptap/extension-link": "^2.8.0",
    "@tiptap/react": "^2.8.0",
    "@tiptap/starter-kit": "^2.8.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "effector": "^23.2.3",
    "effector-react": "^23.3.0",
    "modern-normalize": "^3.0.1",
    "nanoid": "^5.0.8",
    "patronum": "^2.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.8.7",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^9.11.1",
    "eslint-plugin-effector": "^0.15.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "supabase": "^2.9.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
